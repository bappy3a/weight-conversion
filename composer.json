{
    "name": "bappy3a/weight-conversion",
    "description": "Wight conversion in PHP",
    "keywords": [
        "bappy3a",
        "weight-conversion"
    ],
    "homepage": "https://github.com/bappy3a/weight-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmed Bappy",
            "email": "bappy3a@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Bappy3a\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bappy3a\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
